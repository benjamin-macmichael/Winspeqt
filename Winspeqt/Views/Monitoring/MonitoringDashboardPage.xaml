<Page
    x:Class="Winspeqt.Views.Monitoring.MonitoringDashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <Grid Padding="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Back Button -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button 
                    Grid.Column="0"
                    Content="â† Back to Dashboard"
                    Style="{StaticResource SubtleButtonStyle}"
                    Click="BackButton_Click"
                    Margin="0,0,20,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock 
                        Text="System Monitoring" 
                        FontSize="28" 
                        FontWeight="Bold"/>
                    <TextBlock 
                        Text="Understand what's slowing your PC down in plain English" 
                        FontSize="14" 
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Feature Cards Grid -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Task Manager Card -->
                <Button 
                    Grid.Row="0" 
                    Grid.Column="0"
                    Margin="0,0,12,12"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    CornerRadius="8"
                    Click="TaskManagerCard_Click">
                    <Grid Padding="28">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <FontIcon 
                            Grid.Row="0"
                            Glyph="&#xE7C4;" 
                            FontSize="42"
                            Foreground="#FF9800"
                            Margin="0,0,0,16"/>

                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                            <TextBlock 
                                Text="Friendly Task Manager" 
                                FontSize="20" 
                                FontWeight="SemiBold"
                                Margin="0,0,0,8"/>
                            <TextBlock 
                                Text="See which apps are using CPU, RAM, Disk, and Network with easy-to-understand explanations"
                                FontSize="13"
                                TextWrapping="Wrap"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                LineHeight="20"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,16,0,0">
                            <FontIcon Glyph="&#xE76C;" FontSize="12" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            <TextBlock 
                                Text="Open Task Manager" 
                                FontSize="13"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Margin="6,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Button>

                <!-- Resource Trends Card -->
                <Button 
                    Grid.Row="0" 
                    Grid.Column="1"
                    Margin="12,0,0,12"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    CornerRadius="8"
                    Click="ResourceTrendsCard_Click">
                    <Grid Padding="28">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <FontIcon 
                            Grid.Row="0"
                            Glyph="&#xE9D9;" 
                            FontSize="42"
                            Foreground="#4CAF50"
                            Margin="0,0,0,16"/>

                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                            <TextBlock 
                                Text="Resource Trends" 
                                FontSize="20" 
                                FontWeight="SemiBold"
                                Margin="0,0,0,8"/>
                            <TextBlock 
                                Text="View graphs showing how your CPU, memory, and disk usage change over time"
                                FontSize="13"
                                TextWrapping="Wrap"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                LineHeight="20"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,16,0,0">
                            <FontIcon Glyph="&#xE76C;" FontSize="12" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            <TextBlock 
                                Text="View Trends" 
                                FontSize="13"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Margin="6,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Button>

                <!-- Startup Impact Card -->
                <Button 
                    Grid.Row="1" 
                    Grid.Column="0"
                    Margin="0,12,12,0"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    CornerRadius="8"
                    Click="StartupImpactCard_Click">
                    <Grid Padding="28">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <FontIcon 
                            Grid.Row="0"
                            Glyph="&#xE7E8;" 
                            FontSize="42"
                            Foreground="#2196F3"
                            Margin="0,0,0,16"/>

                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                            <TextBlock 
                                Text="Startup Impact Analyzer" 
                                FontSize="20" 
                                FontWeight="SemiBold"
                                Margin="0,0,0,8"/>
                            <TextBlock 
                                Text="See which apps slow down your PC's startup and disable them with one click"
                                FontSize="13"
                                TextWrapping="Wrap"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                LineHeight="20"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,16,0,0">
                            <FontIcon Glyph="&#xE76C;" FontSize="12" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            <TextBlock 
                                Text="Analyze Startup" 
                                FontSize="13"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Margin="6,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Button>

                <!-- Background Process Card -->
                <Button 
                    Grid.Row="1" 
                    Grid.Column="1"
                    Margin="12,12,0,0"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    CornerRadius="8"
                    Click="BackgroundProcessCard_Click">
                    <Grid Padding="28">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <FontIcon 
                            Grid.Row="0"
                            Glyph="&#xE8B5;" 
                            FontSize="42"
                            Foreground="#9C27B0"
                            Margin="0,0,0,16"/>

                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                            <TextBlock 
                                Text="Background Process Insights" 
                                FontSize="20" 
                                FontWeight="SemiBold"
                                Margin="0,0,0,8"/>
                            <TextBlock 
                                Text="Discover hidden apps running in the background that use significant resources"
                                FontSize="13"
                                TextWrapping="Wrap"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                LineHeight="20"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,16,0,0">
                            <FontIcon Glyph="&#xE76C;" FontSize="12" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            <TextBlock 
                                Text="View Processes" 
                                FontSize="13"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Margin="6,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Button>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>