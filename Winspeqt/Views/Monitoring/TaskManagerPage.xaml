<Page
    x:Class="Winspeqt.Views.Monitoring.TaskManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:Winspeqt.Helpers"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <ScrollViewer>
        <Grid Padding="60">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button 
                    Grid.Column="0"
                    Content="â† Back"
                    Click="BackButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="16"
                    Margin="0,0,20,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock 
                        Text="Friendly Task Manager" 
                        FontSize="36" 
                        FontWeight="Bold"/>
                    <TextBlock 
                        Text="See what's using your computer's resources" 
                        FontSize="18" 
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Margin="0,4,0,0"/>
                </StackPanel>

                <Button 
                    Grid.Column="2"
                    Content="ðŸ”„ Refresh"
                    Command="{Binding RefreshCommand}"
                    FontSize="16"
                    Padding="16,8"/>
            </Grid>

            <!-- System Overview Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- CPU Card -->
                <Border 
                    Grid.Column="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock 
                            Text="ðŸ’» Processor (CPU)" 
                            FontSize="20" 
                            FontWeight="SemiBold"
                            Margin="0,0,0,16"/>

                        <TextBlock 
                            Text="{Binding TotalCpuUsage, Mode=OneWay}" 
                            FontSize="48" 
                            FontWeight="Bold"
                            Foreground="#2196F3"/>
                        <TextBlock 
                            Text="%" 
                            FontSize="24"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Margin="0,-8,0,16"/>

                        <TextBlock 
                            Text="{Binding CpuStatusMessage, Mode=OneWay}" 
                            FontSize="15"
                            TextWrapping="Wrap"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            LineHeight="22"/>
                    </StackPanel>
                </Border>

                <!-- Memory Card -->
                <Border 
                    Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="12,0,0,0">
                    <StackPanel>
                        <TextBlock 
                            Text="ðŸ§  Memory (RAM)" 
                            FontSize="20" 
                            FontWeight="SemiBold"
                            Margin="0,0,0,16"/>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                                Text="{Binding UsedMemoryMB, Mode=OneWay}" 
                                FontSize="48" 
                                FontWeight="Bold"
                                Foreground="#FF9800"/>
                            <TextBlock 
                                Text=" / " 
                                FontSize="32" 
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Margin="8,0"/>
                            <TextBlock 
                                Text="{Binding TotalMemoryMB, Mode=OneWay}" 
                                FontSize="32" 
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <TextBlock 
                            Text="MB" 
                            FontSize="20"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Margin="0,-4,0,16"/>

                        <TextBlock 
                            Text="{Binding MemoryStatusMessage, Mode=OneWay}" 
                            FontSize="15"
                            TextWrapping="Wrap"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            LineHeight="22"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Process Lists -->
            <StackPanel Grid.Row="2" Spacing="32">

                <!-- Top Memory Users Section -->
                <StackPanel>
                    <TextBlock 
                        Text="ðŸ§  Apps Using the Most Memory" 
                        FontSize="24" 
                        FontWeight="SemiBold"
                        Margin="0,0,0,16"/>

                    <ItemsRepeater ItemsSource="{Binding TopProcesses, Mode=OneWay}">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <Border 
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="20"
                                    Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon Placeholder -->
                                        <Border 
                                            Grid.Column="0"
                                            Width="32"
                                            Height="32"
                                            Background="#2196F3"
                                            CornerRadius="6"
                                            Margin="0,0,20,0"
                                            VerticalAlignment="Center">
                                            <TextBlock 
                                                Text="ðŸ“¦"
                                                FontSize="20"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- App Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock 
                                                Text="{Binding ProcessName}" 
                                                FontSize="18" 
                                                FontWeight="SemiBold"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock 
                                                    Text="Process ID: " 
                                                    FontSize="14"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                <TextBlock 
                                                    Text="{Binding ProcessId}" 
                                                    FontSize="14"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Memory Usage -->
                                        <StackPanel Grid.Column="2" Margin="20,0,0,0" VerticalAlignment="Center">
                                            <TextBlock 
                                                Text="Memory" 
                                                FontSize="12"
                                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                HorizontalAlignment="Center"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                                                <TextBlock 
                                                    Text="{Binding MemoryUsageMB}" 
                                                    FontSize="20" 
                                                    FontWeight="SemiBold"
                                                    Foreground="#FF9800"/>
                                                <TextBlock 
                                                    Text=" MB" 
                                                    FontSize="20" 
                                                    FontWeight="SemiBold"
                                                    Foreground="#FF9800"
                                                    Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </StackPanel>

            </StackPanel>

            <!-- Loading Overlay -->
            <Border
                Grid.Row="0" 
                Grid.RowSpan="3"
                Background="#CC000000"
                Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Spacing="16">
                    <ProgressRing 
                        IsActive="True"
                        Width="80"
                        Height="80"/>
                    <TextBlock 
                        Text="Loading system information..."
                        FontSize="18"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"
                        Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>