<!-- Views/PerformanceTrendsPage.xaml -->
<Page
    x:Class="Winspeqt.Views.Monitoring.PerformanceTrendsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:Winspeqt.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="16" RowDefinitions="Auto,*" RowSpacing="12">
        <Button
            Content="Refresh"
            Command="{x:Bind ViewModel.RefreshCommand}" />

        <ListView
            Grid.Row="1"
            ItemsSource="{x:Bind ViewModel.Processes, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:ProcessInfo">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="{x:Bind Name}" />
                        <TextBlock Text="{x:Bind Id}" Opacity="0.7"/>
                        <TextBlock Text="{x:Bind Memory}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>