<Page
    x:Class="Winspeqt.Views.BackgroundProcessPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Winspeqt.Views"
    xmlns:viewmodels="using:Winspeqt.ViewModels.Monitoring"
    xmlns:models="using:Winspeqt.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewmodels:BackgroundProcessViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <DataTemplate x:Key="ProcessCardTemplate" x:DataType="models:ProcessInfo">
            <Border 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="20"
                Margin="0,0,0,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Width="56" Height="56" CornerRadius="12" Margin="0,0,20,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="{ThemeResource SystemAccentColor}" Offset="0"/>
                                <GradientStop Color="{ThemeResource SystemAccentColorLight1}" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="{x:Bind Icon}" FontFamily="Segoe MDL2 Assets" FontSize="28"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontWeight="SemiBold"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="6">
                        <TextBlock Text="{x:Bind Description}" Style="{StaticResource BodyStrongTextBlockStyle}" FontSize="16"/>
                        <TextBlock Text="{x:Bind FriendlyExplanation}" Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" Opacity="0.8"
                                   MaxWidth="500" TextTrimming="CharacterEllipsis" MaxLines="2"/>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Background="{ThemeResource SubtleFillColorSecondaryBrush}" CornerRadius="4" Padding="8,4">
                                <TextBlock Text="{x:Bind ProcessName}" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontFamily="Consolas"/>
                            </Border>
                            <Border Background="{ThemeResource AccentFillColorSecondaryBrush}" CornerRadius="4" Padding="8,4">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE121;" FontSize="10" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="{x:Bind RunningTimeFormatted, Mode=OneWay}" Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Spacing="12">
                        <StackPanel Spacing="4" HorizontalAlignment="Right">
                            <TextBlock Text="{x:Bind MemoryUsageDisplay}" Style="{StaticResource SubtitleTextBlockStyle}"
                                       FontWeight="Bold" HorizontalAlignment="Right" FontSize="18"/>
                            <Border Background="{ThemeResource SystemFillColorSuccessBrush}" CornerRadius="4" 
                                    Padding="8,4" HorizontalAlignment="Right">
                                <TextBlock Text="{x:Bind Status}" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                        <Button Content="End Task" Click="EndProcess_Click" Tag="{x:Bind}"
                                HorizontalAlignment="Right" Padding="16,8" CornerRadius="6">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
                                    <Setter Property="Background" Value="{ThemeResource SystemFillColorCriticalBrush}"/>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back Button -->
        <Button Grid.Row="0" Click="BackButton_Click" Style="{StaticResource SubtleButtonStyle}"
                Padding="8" Margin="0,0,0,16" HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon Glyph="&#xE72B;" FontSize="16"/>
                <TextBlock Text="Back to Dashboard" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <!-- Header -->
        <StackPanel Grid.Row="1" Spacing="12" Margin="0,0,0,32">
            <TextBlock Text="Background Processes" Style="{StaticResource TitleLargeTextBlockStyle}" FontWeight="Bold"/>
            <TextBlock Text="Manage running processes organized by category" Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" Opacity="0.8"/>
        </StackPanel>

        <!-- Battery Status -->
        <StackPanel Grid.Row="2" Margin="0,0,0,24" 
                    Visibility="{x:Bind ViewModel.BatteryDevices.Count, Mode=OneWay, Converter={StaticResource CollectionCountToVisibilityConverter}}">
            <TextBlock Text="🔋 Battery Status" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="SemiBold" Margin="0,0,0,16"/>
            <ItemsControl ItemsSource="{x:Bind ViewModel.BatteryDevices, Mode=OneWay}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="16"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="models:BatteryInfo">
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
                                CornerRadius="12" Padding="20" MinWidth="220">
                            <StackPanel Spacing="12">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <TextBlock Text="{x:Bind Icon}" FontFamily="Segoe MDL2 Assets" FontSize="24" VerticalAlignment="Center"/>
                                    <TextBlock Text="{x:Bind DeviceName}" Style="{StaticResource BodyStrongTextBlockStyle}" 
                                               VerticalAlignment="Center" FontSize="15"/>
                                </StackPanel>
                                <TextBlock Text="{x:Bind BatteryLevelFormatted}" Style="{StaticResource TitleTextBlockStyle}" 
                                           FontWeight="Bold" FontSize="28"/>
                                <ProgressBar Value="{x:Bind BatteryLevel}" Maximum="100" Height="8"/>
                                <TextBlock Text="{x:Bind Status}" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Search and Refresh -->
        <Grid Grid.Row="3" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="2">
                <AutoSuggestBox PlaceholderText="Search processes by name or description..." QueryIcon="Find"
                                Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                VerticalAlignment="Center" Background="Transparent" BorderThickness="0"/>
            </Border>
            <Button Grid.Column="1" Command="{x:Bind ViewModel.RefreshCommand}" Margin="12,0,0,0" 
                    VerticalAlignment="Center" Height="40" Padding="16,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <SymbolIcon Symbol="Refresh"/>
                    <TextBlock Text="Refresh"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Process Categories -->
        <ScrollViewer Grid.Row="4">
            <StackPanel Spacing="32">
                <!-- Browsers -->
                <StackPanel Visibility="{x:Bind ViewModel.BrowserProcesses.Count, Mode=OneWay, Converter={StaticResource CollectionCountToVisibilityConverter}}">
                    <TextBlock Text="🌐 Browsers" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="Bold" Margin="0,0,0,16" FontSize="20"/>
                    <ItemsControl ItemsSource="{x:Bind ViewModel.BrowserProcesses, Mode=OneWay}" 
                                  ItemTemplate="{StaticResource ProcessCardTemplate}"/>
                </StackPanel>

                <!-- Gaming -->
                <StackPanel Visibility="{x:Bind ViewModel.GamingProcesses.Count, Mode=OneWay, Converter={StaticResource CollectionCountToVisibilityConverter}}">
                    <TextBlock Text="🎮 Gaming" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="Bold" Margin="0,0,0,16" FontSize="20"/>
                    <ItemsControl ItemsSource="{x:Bind ViewModel.GamingProcesses, Mode=OneWay}" 
                                  ItemTemplate="{StaticResource ProcessCardTemplate}"/>
                </StackPanel>

                <!-- Cloud Storage -->
                <StackPanel Visibility="{x:Bind ViewModel.CloudStorageProcesses.Count, Mode=OneWay, Converter={StaticResource CollectionCountToVisibilityConverter}}">
                    <TextBlock Text="☁️ Cloud Storage" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="Bold" Margin="0,0,0,16" FontSize="20"/>
                    <ItemsControl ItemsSource="{x:Bind ViewModel.CloudStorageProcesses, Mode=OneWay}" 
                                  ItemTemplate="{StaticResource ProcessCardTemplate}"/>
                </StackPanel>

                <!-- Communication -->
                <StackPanel Visibility="{x:Bind ViewModel.CommunicationProcesses.Count, Mode=OneWay, Converter={StaticResource CollectionCountToVisibilityConverter}}">
                    <TextBlock Text="💬 Communication" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="Bold" Margin="0,0,0,16" FontSize="20"/>
                    <ItemsControl ItemsSource="{x:Bind ViewModel.CommunicationProcesses, Mode=OneWay}" 
                                  ItemTemplate="{StaticResource ProcessCardTemplate}"/>
                </StackPanel>

                <!-- Media -->
                <StackPanel Visibility="{x:Bind ViewModel.MediaProcesses.Count, Mode=OneWay, Converter={StaticResource CollectionCountToVisibilityConverter}}">
                    <TextBlock Text="🎵 Media" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="Bold" Margin="0,0,0,16" FontSize="20"/>
                    <ItemsControl ItemsSource="{x:Bind ViewModel.MediaProcesses, Mode=OneWay}" 
                                  ItemTemplate="{StaticResource ProcessCardTemplate}"/>
                </StackPanel>

                <!-- Development -->
                <StackPanel Visibility="{x:Bind ViewModel.DevelopmentProcesses.Count, Mode=OneWay, Converter={StaticResource CollectionCountToVisibilityConverter}}">
                    <TextBlock Text="💻 Development" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="Bold" Margin="0,0,0,16" FontSize="20"/>
                    <ItemsControl ItemsSource="{x:Bind ViewModel.DevelopmentProcesses, Mode=OneWay}" 
                                  ItemTemplate="{StaticResource ProcessCardTemplate}"/>
                </StackPanel>

                <!-- System Services -->
                <StackPanel Visibility="{x:Bind ViewModel.SystemServicesProcesses.Count, Mode=OneWay, Converter={StaticResource CollectionCountToVisibilityConverter}}">
                    <TextBlock Text="⚙️ System Services" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="Bold" Margin="0,0,0,16" FontSize="20"/>
                    <ItemsControl ItemsSource="{x:Bind ViewModel.SystemServicesProcesses, Mode=OneWay}" 
                                  ItemTemplate="{StaticResource ProcessCardTemplate}"/>
                </StackPanel>

                <!-- Other -->
                <StackPanel Visibility="{x:Bind ViewModel.OtherProcesses.Count, Mode=OneWay, Converter={StaticResource CollectionCountToVisibilityConverter}}">
                    <TextBlock Text="📦 Other" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="Bold" Margin="0,0,0,16" FontSize="20"/>
                    <ItemsControl ItemsSource="{x:Bind ViewModel.OtherProcesses, Mode=OneWay}" 
                                  ItemTemplate="{StaticResource ProcessCardTemplate}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>