<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Winspeqt.Views.Optimization.LargeFileFinder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Winspeqt.Views.Optimization"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:Winspeqt.Helpers" 
    xmlns:optimization="using:Winspeqt.ViewModels.Optimization" d:DataContext="{d:DesignInstance Type=optimization:LargeFileFinderViewModel}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <helpers:FolderItemTypeToGlyphConverter x:Key="FolderItemTypeToGlyphConverter"/>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <ScrollViewer>
        <Grid Padding="60">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Back Button -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button 
                 Grid.Column="0"
                 Content="â† Back"
                 Click="BackButton_Click"
                 Margin="0,0,20,0"
                 Background="Transparent"
                 BorderThickness="0"
                 FontSize="16"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                        <FontIcon 
                            Grid.Row="0"
                            Glyph="&#xE8B7;" 
                            FontSize="56"
                            Foreground="#F44336"
                            Margin="0,0,10,10"/>
                        <TextBlock 
                             Text="Large File Finder" 
                             FontSize="36" 
                             FontWeight="Bold"/>
                    </StackPanel>
                    
                    <TextBlock 
                     Text="Scan your folders to find the largest files taking up space on your PC" 
                     FontSize="18" 
                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                     Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
            <StackPanel Grid.Row="1">
                <!--Bread crumb goes here-->
                <Rectangle Height="2" 
                   Width="750" 
                   Fill="Black" 
                   HorizontalAlignment="Center"/>
                <ItemsRepeater ItemsSource="{Binding FolderItems, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Button
                                    Click="StackPanel_Click"
                                    CommandParameter="{Binding FilePath}"
                                    MaxWidth="750"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="12,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel
                                            Grid.Column="0"
                                            Orientation="Horizontal"
                                            Spacing="6"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            >
                                            <FontIcon
                                                Glyph="{Binding Type, Converter={StaticResource FolderItemTypeToGlyphConverter}}" 
                                                Foreground="{Binding WarningColor}"/>
                                            <TextBlock
                                                Text="{Binding Name}"
                                                FontSize="24"
                                                Foreground="{Binding WarningColor}"/>
                                        </StackPanel>

                                        <StackPanel
                                            Grid.Column="1"
                                            Orientation="Horizontal"
                                            Spacing="10"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right">
                                            <TextBlock 
                                                Text="{Binding Size}"
                                                Foreground="{Binding WarningColor}"/>
                                            <TextBlock 
                                                Text="{Binding DataLabel}"
                                                Foreground="{Binding WarningColor}"/>
                                        </StackPanel>
                                    </Grid>
                                </Button>
                                <Rectangle Height="1" 
                                   Width="750" 
                                   Fill="Black" 
                                   HorizontalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </StackPanel>
            <Border
                Grid.Row="0" 
                Grid.RowSpan="3"
                Background="#CC000000"
                Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Spacing="16">
                    <ProgressRing 
                        IsActive="True"
                        Width="80"
                        Height="80"/>
                                <TextBlock 
                        Text="Loading system information..."
                        FontSize="18"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"
                        Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
