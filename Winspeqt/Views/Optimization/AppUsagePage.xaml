<Page
    x:Class="Winspeqt.Views.Optimization.AppUsagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Winspeqt.Views.Optimization"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:FirstLetterConverter x:Key="FirstLetterConverter"/>
        <local:TrackingButtonTextConverter x:Key="TrackingButtonTextConverter"/>
    </Page.Resources>

    <Grid Background="#1E1E1E">
        <!-- Usage Tracking View -->
        <Grid Visibility="{Binding ShowInstalledAppsView, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Padding="30,30,30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="App Usage Tracker" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                    <TextBlock Text="Monitor your application usage and screen time" 
                          FontSize="14" 
                          Foreground="#A0A0A0" 
                          Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Spacing="10">
                    <Button Content="View Installed Apps" 
                        Command="{Binding ShowInstalledAppsCommand}"
                        Background="#16C60C"
                        Foreground="White"
                        Padding="20,10"
                        CornerRadius="6"/>

                    <Button Content="{Binding IsTrackingEnabled, Converter={StaticResource TrackingButtonTextConverter}}" 
                        Command="{Binding ToggleTrackingCommand}"
                        Background="#007ACC"
                        Foreground="White"
                        Padding="20,10"
                        CornerRadius="6"/>

                    <Button Content="Refresh" 
                        Command="{Binding RefreshCommand}"
                        Background="#3E3E42"
                        Foreground="White"
                        Padding="20,10"
                        CornerRadius="6"/>

                    <Button Content="Reset" 
                        Command="{Binding ResetTrackingCommand}"
                        Background="#E74856"
                        Foreground="White"
                        Padding="20,10"
                        CornerRadius="6"/>
                </StackPanel>
            </Grid>

            <!-- Stats Cards -->
            <Grid Grid.Row="1" Padding="30,0,30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,0,15,0">
                    <StackPanel>
                        <TextBlock Text="Total Screen Time" Foreground="#A0A0A0" FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding TotalScreenTimeFormatted}" Foreground="White" FontSize="24" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,0,15,0">
                    <StackPanel>
                        <TextBlock Text="Apps Used" Foreground="#A0A0A0" FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding UsageStats.TotalAppsUsed}" Foreground="White" FontSize="24" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,0,15,0">
                    <StackPanel>
                        <TextBlock Text="Currently Active" Foreground="#A0A0A0" FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding UsageStats.ActiveApps}" Foreground="White" FontSize="24" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Background="#2D2D30" CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Most Used App" Foreground="#A0A0A0" FontSize="12" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding UsageStats.MostUsedApp}" 
                              Foreground="White" 
                              FontSize="18"
                              FontWeight="Bold"
                              TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Search Bar -->
            <Border Grid.Row="2" 
                Background="#2D2D30" 
                CornerRadius="6" 
                Margin="30,0,30,20"
                Padding="15,10">
                <TextBox Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     PlaceholderText="ðŸ” Search applications..."
                     Background="Transparent"
                     Foreground="White"
                     BorderThickness="0"
                     FontSize="14"
                     VerticalAlignment="Center"/>
            </Border>

            <!-- Applications List -->
            <ScrollViewer Grid.Row="3" 
                     Margin="30,0,30,30"
                     VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Applications}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2D2D30" 
                                CornerRadius="6" 
                                Padding="15" 
                                Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- App Icon/Name -->
                                    <Border Grid.Column="0" 
                                       Background="#007ACC" 
                                       CornerRadius="8" 
                                       Width="50" 
                                       Height="50"
                                       Margin="0,0,15,0">
                                        <TextBlock Text="{Binding AppName, Converter={StaticResource FirstLetterConverter}}" 
                                              Foreground="White" 
                                              FontSize="20" 
                                              FontWeight="Bold"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- App Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" Spacing="10">
                                            <TextBlock Text="{Binding AppName}" 
                                                  Foreground="White" 
                                                  FontSize="16" 
                                                  FontWeight="SemiBold"/>
                                            <Border Background="#16C60C" 
                                               CornerRadius="10" 
                                               Padding="8,2"
                                               Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="Running" 
                                                      Foreground="White" 
                                                      FontSize="10"/>
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Text="{Binding ProcessName}" 
                                              Foreground="#A0A0A0" 
                                              FontSize="12" 
                                              Margin="0,3,0,0"/>
                                        <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,3,0,0">
                                            <TextBlock Foreground="#A0A0A0" FontSize="12" Text="Last used:"/>
                                            <TextBlock Foreground="#A0A0A0" FontSize="12" Text="{Binding FormattedLastUsed}"/>
                                            <TextBlock Foreground="#A0A0A0" FontSize="12" Text="â€¢"/>
                                            <TextBlock Foreground="#A0A0A0" FontSize="12" Text="Launched"/>
                                            <TextBlock Foreground="#A0A0A0" FontSize="12" Text="{Binding LaunchCount}"/>
                                            <TextBlock Foreground="#A0A0A0" FontSize="12" Text="times"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Usage Time -->
                                    <StackPanel Grid.Column="2" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Right"
                                           Margin="0,0,30,0">
                                        <TextBlock Text="{Binding FormattedUsageTime}" 
                                              Foreground="White" 
                                              FontSize="20" 
                                              FontWeight="Bold"
                                              HorizontalAlignment="Right"/>
                                        <TextBlock Text="Total Time" 
                                              Foreground="#A0A0A0" 
                                              FontSize="11"
                                              HorizontalAlignment="Right"
                                              Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <!-- Usage Percentage -->
                                    <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                        <TextBlock Foreground="#16C60C" 
                                              FontSize="18" 
                                              FontWeight="Bold"
                                              HorizontalAlignment="Center">
                                        <Run Text="{Binding UsagePercentage}"/>
                                        <Run Text="%"/>
                                        </TextBlock>
                                        <ProgressBar Value="{Binding UsagePercentage}" 
                                               Maximum="100"
                                               Width="60"
                                               Height="6"
                                               Margin="0,5,0,0"
                                               Background="#3E3E42"
                                               Foreground="#16C60C"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Installed Apps View -->
        <Grid Visibility="{Binding ShowInstalledAppsView, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Installed Apps Section Header -->
            <Grid Grid.Row="0" Padding="30,20,30,10" Background="#1E1E1E">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Installed Applications" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="White"/>
                    <TextBlock Text="Find apps you haven't used recently and consider uninstalling" 
                          FontSize="14" 
                          Foreground="#A0A0A0" 
                          Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <Button Content="â† Back to Usage" 
                        Command="{Binding ShowUsageViewCommand}"
                        Background="#3E3E42"
                        Foreground="White"
                        Padding="20,10"
                        CornerRadius="6"/>

                    <CheckBox Content="Show only unused (90+ days)" 
                         IsChecked="{Binding ShowOnlyUnused, Mode=TwoWay}"
                         Foreground="White"
                         FontSize="12"/>
                    <Button Content="â†» Refresh List" 
                        Command="{Binding RefreshInstalledAppsCommand}"
                        Background="#007ACC"
                        Foreground="White"
                        Padding="15,8"
                        CornerRadius="4"/>
                </StackPanel>
            </Grid>

            <!-- Installed Apps List -->
            <ScrollViewer Grid.Row="1" 
                     Margin="30,0,30,30"
                     VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding InstalledApps}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2D2D30" 
                                CornerRadius="6" 
                                Padding="15" 
                                Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- App Info -->
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" Spacing="10">
                                            <TextBlock Text="{Binding AppName}" 
                                                  Foreground="White" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold"/>
                                            <Border Background="#E74856" 
                                               CornerRadius="10" 
                                               Padding="8,2"
                                               Visibility="{Binding IsUnused, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="UNUSED" 
                                                      Foreground="White" 
                                                      FontSize="9"
                                                      FontWeight="Bold"/>
                                            </Border>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,4,0,0">
                                            <TextBlock Foreground="#A0A0A0" FontSize="11" Text="Publisher:"/>
                                            <TextBlock Foreground="#A0A0A0" FontSize="11" Text="{Binding Publisher}"/>
                                            <TextBlock Foreground="#A0A0A0" FontSize="11" Text="â€¢"/>
                                            <TextBlock Foreground="#A0A0A0" FontSize="11" Text="Version:"/>
                                            <TextBlock Foreground="#A0A0A0" FontSize="11" Text="{Binding Version}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Install Date -->
                                    <StackPanel Grid.Column="1" 
                                           VerticalAlignment="Center" 
                                           Margin="20,0">
                                        <TextBlock Text="Installed" 
                                              Foreground="#A0A0A0" 
                                              FontSize="10"/>
                                        <TextBlock Text="{Binding FormattedInstallDate}" 
                                              Foreground="White" 
                                              FontSize="12"/>
                                    </StackPanel>

                                    <!-- Last Used -->
                                    <StackPanel Grid.Column="2" 
                                           VerticalAlignment="Center" 
                                           Margin="20,0">
                                        <TextBlock Text="Last Used" 
                                              Foreground="#A0A0A0" 
                                              FontSize="10"/>
                                        <TextBlock Text="{Binding FormattedLastUsed}" 
                                              Foreground="White" 
                                              FontSize="12"/>
                                    </StackPanel>

                                    <!-- Size -->
                                    <StackPanel Grid.Column="3" 
                                           VerticalAlignment="Center" 
                                           Margin="20,0,0,0">
                                        <TextBlock Text="Size" 
                                              Foreground="#A0A0A0" 
                                              FontSize="10"/>
                                        <TextBlock Text="{Binding FormattedSize}" 
                                              Foreground="White" 
                                              FontSize="12"
                                              FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="1" 
              Background="#CC000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressRing IsActive="True" Width="50" Height="50" Foreground="White"/>
                <TextBlock Text="Loading..." 
                          Foreground="White" 
                          FontSize="20" 
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>