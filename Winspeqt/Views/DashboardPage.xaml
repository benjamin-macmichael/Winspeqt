<Page
    x:Class="Winspeqt.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Padding="60,60,60,40">
            <!-- Gear icon top-right -->
            <Button
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Background="Transparent"
        BorderThickness="0"
        Padding="8"
        CornerRadius="6"
        Command="{Binding SettingsCommand}"
        ToolTipService.ToolTip="Settings">
                <FontIcon Glyph="&#xE713;" FontSize="20" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </Button>

            <!-- Existing centered header text (unchanged) -->
            <StackPanel HorizontalAlignment="Center">
                <TextBlock
            Text="Winspeqt"
            FontSize="48"
            FontWeight="Bold"
            Margin="0,0,0,12"
            TextAlignment="Center"/>
                <TextBlock
            Text="Your Windows System Inspector and Optimizer"
            FontSize="20"
            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
            Margin="0,0,0,8"
            TextAlignment="Center"/>
                <TextBlock
            Text="Choose a category to get started"
            FontSize="18"
            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
            TextAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1" Padding="60,0,60,60" MaxWidth="1400">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Security Card -->
            <Button 
                Grid.Column="0"
                Margin="0,0,20,0"
                Padding="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="2"
                CornerRadius="12"
                Command="{Binding SecurityCommand}">
                <Grid Padding="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Icon -->
                    <FontIcon 
                        Grid.Row="0"
                        Glyph="&#xE72E;" 
                        FontSize="64"
                        Foreground="#4CAF50"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,24"/>

                    <!-- Content -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                        <TextBlock 
                            Text="Security" 
                            FontSize="32" 
                            FontWeight="SemiBold"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,16"/>
                        <TextBlock 
                            Text="Check your system's security status, find vulnerabilities, and get recommendations to protect your PC"
                            FontSize="16"
                            TextWrapping="Wrap"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            HorizontalAlignment="Center"
                            TextAlignment="Center"
                            LineHeight="24"/>
                    </StackPanel>

                    <!-- Action Text -->
                    <TextBlock 
                        Grid.Row="2"
                        Text="Get Started →" 
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                        HorizontalAlignment="Center"
                        Margin="0,24,0,0"/>
                </Grid>
            </Button>

            <!-- Optimization Card -->
            <Button 
                Grid.Column="1"
                Margin="20,0"
                Padding="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="2"
                CornerRadius="12"
                Command="{Binding OptimizationCommand}">
                <Grid Padding="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Icon -->
                    <FontIcon 
                        Grid.Row="0"
                        Glyph="&#xE73C;" 
                        FontSize="64"
                        Foreground="#2196F3"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,24"/>

                    <!-- Content -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                        <TextBlock 
                            Text="Optimization" 
                            FontSize="32" 
                            FontWeight="SemiBold"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,16"/>
                        <TextBlock 
                            Text="Free up disk space, find large files, remove unused apps, and speed up your system safely"
                            FontSize="16"
                            TextWrapping="Wrap"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            HorizontalAlignment="Center"
                            TextAlignment="Center"
                            LineHeight="24"/>
                    </StackPanel>

                    <!-- Action Text -->
                    <TextBlock 
                        Grid.Row="2"
                        Text="Get Started →" 
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                        HorizontalAlignment="Center"
                        Margin="0,24,0,0"/>
                </Grid>
            </Button>

            <!-- Monitoring Card -->
            <Button 
                Grid.Column="2"
                Margin="20,0,0,0"
                Padding="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="2"
                CornerRadius="12"
                Command="{Binding MonitoringCommand}">
                <Grid Padding="40">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Icon -->
                    <FontIcon 
                        Grid.Row="0"
                        Glyph="&#xE9D9;" 
                        FontSize="64"
                        Foreground="#FF9800"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,24"/>

                    <!-- Content -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                        <TextBlock 
                            Text="Monitoring" 
                            FontSize="32" 
                            FontWeight="SemiBold"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,16"/>
                        <TextBlock 
                            Text="Monitor CPU, memory, and disk usage in real-time with friendly explanations of what's happening"
                            FontSize="16"
                            TextWrapping="Wrap"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            HorizontalAlignment="Center"
                            TextAlignment="Center"
                            LineHeight="24"/>
                    </StackPanel>

                    <!-- Action Text -->
                    <TextBlock 
                        Grid.Row="2"
                        Text="Get Started →" 
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                        HorizontalAlignment="Center"
                        Margin="0,24,0,0"/>
                </Grid>
            </Button>
        </Grid>
    </Grid>
</Page>