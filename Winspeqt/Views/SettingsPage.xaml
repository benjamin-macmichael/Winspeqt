<Page
    x:Class="Winspeqt.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Winspeqt.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#1E1E1E">

    <Page.Resources>
        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Padding="30,30,30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Content="â† Back"
                Click="BackButton_Click"
                Background="Transparent"
                BorderThickness="0"
                Foreground="White"
                FontSize="16"
                Padding="0"
                Margin="0,0,20,0"
                VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1">
                <TextBlock
                    Text="Settings"
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="White"/>
                <TextBlock
                    Text="Manage how Winspeqt behaves on your system"
                    FontSize="14"
                    Foreground="#A0A0A0"
                    Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" Padding="30,0,30,30" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">

                <!-- Startup Section -->
                <TextBlock
                    Text="SYSTEM"
                    FontSize="11"
                    FontWeight="SemiBold"
                    Foreground="#A0A0A0"
                    CharacterSpacing="150"
                    Margin="0,0,0,4"/>

                <Border Background="#2D2D30" CornerRadius="8" Padding="24">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon -->
                        <Border
                            Grid.Column="0"
                            Background="#3E3E42"
                            CornerRadius="8"
                            Width="44"
                            Height="44"
                            Margin="0,0,16,0">
                            <FontIcon
                                Glyph="&#xE7E8;"
                                FontSize="20"
                                Foreground="#007ACC"/>
                        </Border>

                        <!-- Text -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock
                                Text="Launch at Startup"
                                FontSize="15"
                                FontWeight="SemiBold"
                                Foreground="White"/>
                            <TextBlock
                                Text="{Binding StartupStatusMessage}"
                                FontSize="12"
                                Foreground="#A0A0A0"
                                TextWrapping="Wrap"
                                Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Toggle -->
                        <ToggleSwitch
                            Grid.Column="2"
                            IsOn="{Binding LaunchAtStartup, Mode=TwoWay}"
                            IsEnabled="{Binding IsStartupToggleBusy, Converter={StaticResource InverseBoolConverter}}"
                            OnContent=""
                            OffContent=""
                            VerticalAlignment="Center"
                            Margin="16,0,0,0"/>
                    </Grid>
                </Border>

                <!-- Placeholder section for future settings -->
                <TextBlock
                    Text="NOTIFICATIONS"
                    FontSize="11"
                    FontWeight="SemiBold"
                    Foreground="#A0A0A0"
                    CharacterSpacing="150"
                    Margin="0,8,0,4"/>

                <Border Background="#2D2D30" CornerRadius="8" Padding="24">
                    <StackPanel Spacing="4">
                        <TextBlock
                            Text="More notification settings coming soon"
                            FontSize="14"
                            Foreground="#A0A0A0"/>
                        <TextBlock
                            Text="Health score alerts, weekly app scan summaries, and more will appear here."
                            FontSize="12"
                            Foreground="#606060"
                            TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>