<Page
    x:Class="Winspeqt.Views.Security.SettingsRecommendationsPage"
    x:Name="TaskManagerPageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:Winspeqt.Helpers" xmlns:security="using:Winspeqt.ViewModels.Security" d:DataContext="{d:DesignInstance Type=security:SettingsRecommendationsViewModel}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextWrapping" Value="WrapWholeWords" />
        </Style>
        <Style x:Key="SectionIconStyle" TargetType="FontIcon">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,2,8,0"/>
        </Style>
        <Style x:Key="SectionBodyText" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="WrapWholeWords" />
            <Setter Property="Margin" Value="0,0,0,20" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="WrapWholeWords" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <Grid Padding="60">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button 
                    Grid.Column="0"
                    Content="â† Back"
                    Click="BackButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="16"
                    Margin="0,0,20,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock 
                        Text="Windows Settings Recommendations" 
                        FontSize="36" 
                        FontWeight="Bold"
                        TextWrapping="WrapWholeWords"/>
                    <TextBlock 
                        Text="Learn about security settings like SmartScreen, remote access, and privacy options explained in plain language" 
                        FontSize="18" 
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border 
                    Grid.Row="0"
                    Grid.Column="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="0,0,12,12"
                    MaxWidth="500">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon 
                                Glyph="{Binding SettingsRecommendations[0].LogoCode}"
                                Style="{StaticResource SectionIconStyle}"
                                Foreground="{Binding SettingsRecommendations[0].IconColor}"/>
                            <TextBlock 
                                Text="{Binding SettingsRecommendations[0].Name}" 
                                Style="{StaticResource SectionTitleStyle}"/>
                        </StackPanel>
                        <TextBlock
                            Style="{StaticResource SectionBodyText}"
                            Text="{Binding SettingsRecommendations[0].Description}"
                            />
                        <Button Click="LinkButton_Click" Content="{Binding SettingsRecommendations[0].Button.Label}" CommandParameter="{Binding SettingsRecommendations[0].Button.Target}" />
                    </StackPanel>
                </Border>

                <Border 
                    Grid.Row="0"
                    Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="0,0,12,12"
                    MaxWidth="500">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon 
                                Glyph="{Binding SettingsRecommendations[1].LogoCode}"
                                Style="{StaticResource SectionIconStyle}"
                                Foreground="{Binding SettingsRecommendations[1].IconColor}"/>
                            <TextBlock 
                                Text="{Binding SettingsRecommendations[1].Name}" 
                                Style="{StaticResource SectionTitleStyle}"/>
                        </StackPanel>
                        <TextBlock
                            Style="{StaticResource SectionBodyText}"
                            Text="{Binding SettingsRecommendations[1].Description}"
                            />
                        <Button Click="LinkButton_Click" Content="{Binding SettingsRecommendations[1].Button.Label}" CommandParameter="{Binding SettingsRecommendations[1].Button.Target}" />
                    </StackPanel>
                </Border>

                <Border 
                    Grid.Row="1"
                    Grid.Column="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="0,0,12,12"
                    MaxWidth="500">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon 
                                Glyph="{Binding SettingsRecommendations[2].LogoCode}"
                                Style="{StaticResource SectionIconStyle}"
                                Foreground="{Binding SettingsRecommendations[2].IconColor}"/>
                            <TextBlock 
                                Text="{Binding SettingsRecommendations[2].Name}" 
                                Style="{StaticResource SectionTitleStyle}"/>
                        </StackPanel>
                        <TextBlock
                            Style="{StaticResource SectionBodyText}"
                            Text="{Binding SettingsRecommendations[2].Description}"
                            />
                        <Button Click="LinkButton_Click" Content="{Binding SettingsRecommendations[2].Button.Label}" CommandParameter="{Binding SettingsRecommendations[2].Button.Target}" />
                    </StackPanel>
                </Border>

                <Border 
                    Grid.Row="1"
                    Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="0,0,12,12"
                    MaxWidth="500">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon 
                                Glyph="{Binding SettingsRecommendations[3].LogoCode}"
                                Style="{StaticResource SectionIconStyle}"
                                Foreground="{Binding SettingsRecommendations[3].IconColor}"/>
                            <TextBlock 
                                Text="{Binding SettingsRecommendations[3].Name}" 
                                Style="{StaticResource SectionTitleStyle}"/>
                        </StackPanel>
                        <TextBlock
                            Style="{StaticResource SectionBodyText}"
                            Text="{Binding SettingsRecommendations[3].Description}"
                            />
                        <Button Click="LinkButton_Click" Content="{Binding SettingsRecommendations[3].Button.Label}" CommandParameter="{Binding SettingsRecommendations[3].Button.Target}" />
                    </StackPanel>
                </Border>

                <Border 
                    Grid.Row="2"
                    Grid.Column="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="0,0,12,12"
                    MaxWidth="500">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon 
                                Glyph="{Binding SettingsRecommendations[4].LogoCode}"
                                Style="{StaticResource SectionIconStyle}"
                                Foreground="{Binding SettingsRecommendations[4].IconColor}"/>
                            <TextBlock 
                                Text="{Binding SettingsRecommendations[4].Name}" 
                                Style="{StaticResource SectionTitleStyle}"/>
                        </StackPanel>
                        <TextBlock
                            Style="{StaticResource SectionBodyText}"
                            Text="{Binding SettingsRecommendations[4].Description}"
                            />
                        <Button Click="LinkButton_Click" Content="{Binding SettingsRecommendations[4].Button.Label}" CommandParameter="{Binding SettingsRecommendations[4].Button.Target}" />
                    </StackPanel>
                </Border>

                <Border 
                    Grid.Row="2"
                    Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="0,0,12,12"
                    MaxWidth="500">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon 
                                Glyph="{Binding SettingsRecommendations[5].LogoCode}"
                                Style="{StaticResource SectionIconStyle}"
                                Foreground="{Binding SettingsRecommendations[5].IconColor}"/>
                            <TextBlock 
                                Text="{Binding SettingsRecommendations[5].Name}" 
                                Style="{StaticResource SectionTitleStyle}"/>
                        </StackPanel>
                        <TextBlock
                            Style="{StaticResource SectionBodyText}"
                            Text="{Binding SettingsRecommendations[5].Description}"
                            />
                        <Button Click="LinkButton_Click" Content="{Binding SettingsRecommendations[5].Button.Label}" CommandParameter="{Binding SettingsRecommendations[5].Button.Target}" />
                    </StackPanel>
                </Border>

                <Border 
                    Grid.Row="3"
                    Grid.Column="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="0,0,12,12"
                    MaxWidth="500">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon 
                                Glyph="{Binding SettingsRecommendations[6].LogoCode}"
                                Style="{StaticResource SectionIconStyle}"
                                Foreground="{Binding SettingsRecommendations[6].IconColor}"/>
                            <TextBlock 
                                Text="{Binding SettingsRecommendations[6].Name}" 
                                Style="{StaticResource SectionTitleStyle}"/>
                        </StackPanel>
                        <TextBlock
                            Style="{StaticResource SectionBodyText}"
                            Text="{Binding SettingsRecommendations[6].Description}"
                            />
                        <Button Click="LinkButton_Click" Content="{Binding SettingsRecommendations[6].Button.Label}" CommandParameter="{Binding SettingsRecommendations[6].Button.Target}" />
                    </StackPanel>
                </Border>

                <Border 
                    Grid.Row="3"
                    Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="0,0,12,12"
                    MaxWidth="500">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon 
                                Glyph="{Binding SettingsRecommendations[7].LogoCode}"
                                Style="{StaticResource SectionIconStyle}"
                                Foreground="{Binding SettingsRecommendations[7].IconColor}"/>
                            <TextBlock 
                                Text="{Binding SettingsRecommendations[7].Name}" 
                                Style="{StaticResource SectionTitleStyle}"/>
                        </StackPanel>
                        <TextBlock
                            Style="{StaticResource SectionBodyText}"
                            Text="{Binding SettingsRecommendations[7].Description}"
                            />
                        <Button Click="LinkButton_Click" Content="{Binding SettingsRecommendations[7].Button.Label}" CommandParameter="{Binding SettingsRecommendations[7].Button.Target}" />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
