<Page
    x:Class="Winspeqt.Views.Security.SettingsRecommendationsPage"
    x:Name="TaskManagerPageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:Winspeqt.Helpers" xmlns:security="using:Winspeqt.ViewModels.Security" d:DataContext="{d:DesignInstance Type=security:SettingsRecommendationsViewModel}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextWrapping" Value="WrapWholeWords" />
        </Style>
        <Style x:Key="SectionIconStyle" TargetType="FontIcon">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,2,8,0"/>
        </Style>
        <Style x:Key="SectionBodyText" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="WrapWholeWords" />
            <Setter Property="Margin" Value="0,0,0,20" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="WrapWholeWords" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <Grid Padding="60">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button 
                    Grid.Column="0"
                    Content="â† Back"
                    Click="BackButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="16"
                    Margin="0,0,20,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock 
                        Text="Windows Settings Recommendations" 
                        FontSize="36" 
                        FontWeight="Bold"
                        TextWrapping="WrapWholeWords"/>
                    <TextBlock 
                        Text="Learn about security settings like SmartScreen, remote access, and privacy options explained in plain language" 
                        FontSize="18" 
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>

            <GridView Grid.Row="1" ItemsSource="{Binding SettingsRecommendations}" HorizontalAlignment="Center">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Border 
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="2"
                            CornerRadius="12"
                            Padding="28"
                            Margin="0,0,12,12"
                            MaxWidth="500">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon 
                                        Glyph="{Binding LogoCode}"
                                        Style="{StaticResource SectionIconStyle}"
                                        Foreground="{Binding IconColor}"/>
                                    <TextBlock 
                                        Text="{Binding Name}" 
                                        Style="{StaticResource SectionTitleStyle}"/>
                                </StackPanel>
                                <TextBlock
                                    Style="{StaticResource SectionBodyText}"
                                    Text="{Binding Description}"
                                    />
                                <Button Content="View Location Settings" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <!-- Recommendation Cards -->
            <Grid Grid.Row="2" Margin="0,0,0,32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Location Card -->
                <Border 
                    Grid.Row="0" Grid.Column="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="0,0,12,12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon 
                                Glyph="&#xe707;"
                                Style="{StaticResource SectionIconStyle}"
                                Foreground="#F14F21"/>
                            <TextBlock 
                                Text="Location" 
                                Style="{StaticResource SectionTitleStyle}"/>
                        </StackPanel>
                        <TextBlock
                            Style="{StaticResource SectionBodyText}"
                            Text="Super spies like to download trackers onto your computer. You think you downloaded a cute little clicker game? No, it's the KGB finding a way to spy on your every move! Catch them in the act and see what apps are being used to keep you under the threat of espionage."
                            />
                        <Button Content="View Location Settings" />
                    </StackPanel>
                </Border>

                <!-- Lock Time Card -->
                <Border 
                    Grid.Row="0" Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="12,0,0,12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon 
                                Glyph="&#xf182;" 
                                Style="{StaticResource SectionIconStyle}" 
                                Foreground="#7EB900"/>
                            <TextBlock
                                Text="Screen Time Out"
                                Style="{StaticResource SectionTitleStyle}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Network Card -->
                <Border 
                    Grid.Row="1" Grid.Column="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="0,12,12,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon 
                                Glyph="&#xe777;" 
                                Style="{StaticResource SectionIconStyle}" 
                                Foreground="#00A3EE"/>
                            <TextBlock
                                Text="Windows Update"
                                Style="{StaticResource SectionTitleStyle}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Disk Card -->
                <Border 
                    Grid.Row="1" Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="12,12,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon 
                                Glyph="&#xe72e;" 
                                Style="{StaticResource SectionIconStyle}" 
                                Foreground="#FEB800"/>
                            <TextBlock
                                Text="Sign-in Options"
                                Style="{StaticResource SectionTitleStyle}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>