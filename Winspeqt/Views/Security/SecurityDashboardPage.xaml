<Page
    x:Class="Winspeqt.Views.Security.SecurityDashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <Grid Padding="60">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Back Button -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button 
                    Grid.Column="0"
                    Content="â† Back to Dashboard"
                    Click="BackButton_Click"
                    Margin="0,0,20,0"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="16"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock 
                        Text="Device Hardening &amp; Security" 
                        FontSize="36" 
                        FontWeight="Bold"/>
                    <TextBlock 
                        Text="Make your system safer without needing technical knowledge" 
                        FontSize="18" 
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Feature Cards Grid -->
            <Grid Grid.Row="2" Margin="0,40,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="280"/>
                    <RowDefinition Height="*" MinHeight="280"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Security Status Dashboard Card -->
                <Button 
                    Grid.Row="0" 
                    Grid.Column="0"
                    Margin="0,0,16,16"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Click="SecurityStatusCard_Click">
                    <Grid Padding="36">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <FontIcon 
                            Grid.Row="0"
                            Glyph="&#xE72E;" 
                            FontSize="56"
                            Foreground="#4CAF50"
                            Margin="0,0,0,20"/>

                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                            <TextBlock 
                                Text="Security Status Dashboard" 
                                FontSize="24" 
                                FontWeight="SemiBold"
                                Margin="0,0,0,12"/>
                            <TextBlock 
                                Text="View all key security metrics in one place: Windows Update, Defender, Firewall, BitLocker, and more"
                                FontSize="15"
                                TextWrapping="Wrap"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                LineHeight="22"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE76C;" FontSize="14" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            <TextBlock 
                                Text="Check Status" 
                                FontSize="15"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Margin="8,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Button>

                <!-- App Security Scanner Card -->
                <Button 
                    Grid.Row="0" 
                    Grid.Column="1"
                    Margin="16,0,0,16"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Click="AppSecurityScannerCard_Click">
                    <Grid Padding="36">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <FontIcon 
                            Grid.Row="0"
                            Glyph="&#xE7BA;" 
                            FontSize="56"
                            Foreground="#F44336"
                            Margin="0,0,0,20"/>

                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                            <TextBlock 
                                Text="App Security Scanner" 
                                FontSize="24" 
                                FontWeight="SemiBold"
                                Margin="0,0,0,12"/>
                            <TextBlock 
                                Text="Scan installed apps for vulnerabilities and get step-by-step update instructions"
                                FontSize="15"
                                TextWrapping="Wrap"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                LineHeight="22"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE76C;" FontSize="14" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            <TextBlock 
                                Text="Scan Apps" 
                                FontSize="15"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Margin="8,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Button>

                <!-- Network Security Monitor Card -->
                <Button 
                    Grid.Row="1" 
                    Grid.Column="0"
                    Margin="0,16,16,0"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Click="NetworkSecurityCard_Click">
                    <Grid Padding="36">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <FontIcon 
                            Grid.Row="0"
                            Glyph="&#xE968;" 
                            FontSize="56"
                            Foreground="#2196F3"
                            Margin="0,0,0,20"/>

                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                            <TextBlock 
                                Text="Network Security Monitor" 
                                FontSize="24" 
                                FontWeight="SemiBold"
                                Margin="0,0,0,12"/>
                            <TextBlock 
                                Text="See what's connecting to the internet from your PC and detect suspicious network activity"
                                FontSize="15"
                                TextWrapping="Wrap"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                LineHeight="22"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE76C;" FontSize="14" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            <TextBlock 
                                Text="Monitor Network" 
                                FontSize="15"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Margin="8,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Button>

                <!-- Windows Settings Recommendations Card -->
                <Button 
                    Grid.Row="1" 
                    Grid.Column="1"
                    Margin="16,16,0,0"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Click="SettingsRecommendationsCard_Click">
                    <Grid Padding="36">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <FontIcon 
                            Grid.Row="0"
                            Glyph="&#xE713;" 
                            FontSize="56"
                            Foreground="#FF9800"
                            Margin="0,0,0,20"/>

                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                            <TextBlock 
                                Text="Windows Settings Recommendations" 
                                FontSize="24" 
                                FontWeight="SemiBold"
                                Margin="0,0,0,12"
                                TextWrapping="WrapWholeWords"/>
                            <TextBlock 
                                Text="Learn about security settings like SmartScreen, remote access, and privacy options explained in plain language"
                                FontSize="15"
                                TextWrapping="Wrap"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                LineHeight="22"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE76C;" FontSize="14" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                            <TextBlock 
                                Text="View Settings" 
                                FontSize="15"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Margin="8,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Button>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>