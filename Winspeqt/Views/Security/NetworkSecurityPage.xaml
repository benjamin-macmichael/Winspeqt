<Page
    x:Class="Winspeqt.Views.Security.NetworkSecurityPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Winspeqt.Views.Security"
    xmlns:helpers="using:Winspeqt.Helpers"
    xmlns:viewmodels="using:Winspeqt.ViewModels.Security"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <ScrollViewer>
        <Grid Padding="60">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button 
                    Grid.Column="0"
                    Content="â† Back"
                    Click="BackButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="16"
                    Margin="0,0,20,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock 
                        Text="Network Security Monitor" 
                        FontSize="36" 
                        FontWeight="Bold"/>
                    <TextBlock 
                        Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}" 
                        FontSize="18" 
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    <Button 
                        Content="â–¶ï¸ Start"
                        Command="{x:Bind ViewModel.StartMonitoringCommand}"
                        Style="{StaticResource AccentButtonStyle}"
                        FontSize="16"
                        Padding="16,8"
                        Visibility="{x:Bind ViewModel.IsMonitoring, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Key="F5"/>
                        </Button.KeyboardAccelerators>
                    </Button>

                    <Button 
                        Content="â¸ï¸ Stop"
                        Command="{x:Bind ViewModel.StopMonitoringCommand}"
                        FontSize="16"
                        Padding="16,8"
                        Visibility="{x:Bind ViewModel.IsMonitoring, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>

                    <Button 
                        Command="{x:Bind ViewModel.RefreshCommand}"
                        FontSize="16"
                        Padding="16,8"
                        ToolTipService.ToolTip="Refresh">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="ðŸ”„"/>
                            <TextBlock Text="Refresh"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Overview Stats Cards -->
            <Border 
                Grid.Row="1"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="2"
                CornerRadius="16"
                Padding="32"
                Margin="0,0,0,32">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Active Connections -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="ðŸ”—" FontSize="32" Margin="0,0,0,8"/>
                        <TextBlock 
                            Text="Active Connections" 
                            FontSize="14"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            TextWrapping="Wrap"
                            Margin="0,0,0,4"/>
                        <TextBlock 
                            Text="{x:Bind ViewModel.TotalConnections, Mode=OneWay}" 
                            FontSize="36"
                            FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Listening Ports -->
                    <StackPanel Grid.Column="1" Margin="20,0">
                        <TextBlock Text="ðŸšª" FontSize="32" Margin="0,0,0,8"/>
                        <TextBlock 
                            Text="Listening Ports" 
                            FontSize="14"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            TextWrapping="Wrap"
                            Margin="0,0,0,4"/>
                        <TextBlock 
                            Text="{x:Bind ViewModel.ListeningPorts, Mode=OneWay}" 
                            FontSize="36"
                            FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Risky Connections -->
                    <StackPanel Grid.Column="2" Margin="20,0">
                        <TextBlock Text="âš ï¸" FontSize="32" Margin="0,0,0,8"/>
                        <TextBlock 
                            Text="Risky Connections" 
                            FontSize="14"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            TextWrapping="Wrap"
                            Margin="0,0,0,4"/>
                        <TextBlock 
                            Text="{x:Bind ViewModel.RiskyConnections, Mode=OneWay}" 
                            FontSize="36"
                            FontWeight="Bold"
                            Foreground="#D13438"/>
                    </StackPanel>

                    <!-- Data Sent -->
                    <StackPanel Grid.Column="3" Margin="20,0">
                        <TextBlock Text="ðŸ“¤" FontSize="32" Margin="0,0,0,8"/>
                        <TextBlock 
                            Text="Data Sent" 
                            FontSize="14"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Margin="0,0,0,4"/>
                        <TextBlock 
                            Text="{x:Bind ViewModel.TotalTrafficSent, Mode=OneWay}" 
                            FontSize="28"
                            FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Data Received -->
                    <StackPanel Grid.Column="4" Margin="20,0,0,0">
                        <TextBlock Text="ðŸ“¥" FontSize="32" Margin="0,0,0,8"/>
                        <TextBlock 
                            Text="Data Received" 
                            FontSize="14"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Margin="0,0,0,4"/>
                        <TextBlock 
                            Text="{x:Bind ViewModel.TotalTrafficReceived, Mode=OneWay}" 
                            FontSize="28"
                            FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Tabbed Content Grid (2x2 layout) -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Active Connections Card -->
                <Border 
                    Grid.Row="0" Grid.Column="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="0,0,12,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock 
                                    Text="ðŸ”—" 
                                    FontSize="28"
                                    Margin="0,0,12,0"/>
                                <TextBlock 
                                    Text="Active Connections" 
                                    FontSize="22" 
                                    FontWeight="SemiBold"
                                    VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Connections List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ListView ItemsSource="{x:Bind ViewModel.ActiveConnections, Mode=OneWay}"
                                      SelectionMode="None"
                                      IsItemClickEnabled="False">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="0,8" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding Protocol}" 
                                                       FontWeight="SemiBold"
                                                       FontSize="13"
                                                       VerticalAlignment="Top"
                                                       Margin="0,2,0,0"/>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock FontSize="13" Margin="0,0,0,2">
                                                    <Run Text="Local: " Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                    <Run Text="{Binding DisplayLocalEndpoint}" FontFamily="Consolas" FontWeight="SemiBold"/>
                                                </TextBlock>
                                                <TextBlock FontSize="13" Margin="0,0,0,2">
                                                    <Run Text="Remote: " Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                    <Run Text="{Binding DisplayRemoteEndpoint}" FontFamily="Consolas"/>
                                                </TextBlock>
                                                <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                    <Run Text="{Binding State}"/>
                                                    <Run Text=" â€¢ "/>
                                                    <Run Text="{Binding RiskLevel}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Open Ports Card -->
                <Border 
                    Grid.Row="0" Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="12,0,0,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock 
                                    Text="ðŸšª" 
                                    FontSize="28"
                                    Margin="0,0,12,0"/>
                                <TextBlock 
                                    Text="Open Ports" 
                                    FontSize="22" 
                                    FontWeight="SemiBold"
                                    VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Ports List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ListView ItemsSource="{x:Bind ViewModel.OpenPorts, Mode=OneWay}"
                                      SelectionMode="None"
                                      IsItemClickEnabled="False">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="0,8" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                                                <TextBlock Text="{Binding Port}" 
                                                           FontFamily="Consolas" 
                                                           FontWeight="Bold"
                                                           FontSize="18"/>
                                                <TextBlock Text="{Binding Protocol}" 
                                                           FontSize="11"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding ServiceName}" 
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding RiskDescription}" 
                                                           FontSize="12"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Network Traffic Card -->
                <Border 
                    Grid.Row="1" Grid.Column="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="0,12,12,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock 
                                    Text="ðŸ“Š" 
                                    FontSize="28"
                                    Margin="0,0,12,0"/>
                                <TextBlock 
                                    Text="Network Traffic" 
                                    FontSize="22" 
                                    FontWeight="SemiBold"
                                    VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Traffic Stats List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ListView ItemsSource="{x:Bind ViewModel.TrafficStats, Mode=OneWay}"
                                      SelectionMode="None"
                                      IsItemClickEnabled="False">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="0,12" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" 
                                                       Text="{Binding InterfaceName}" 
                                                       FontWeight="SemiBold"
                                                       FontSize="15"
                                                       Margin="0,0,0,8"/>

                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                        <Run Text="ðŸ“¤ Sent: "/>
                                                        <Run Text="{Binding FormattedBytesSent}" FontWeight="SemiBold"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,2,0,0">
                                                        <Run Text="Rate: "/>
                                                        <Run Text="{Binding FormattedSendRate}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                        <Run Text="ðŸ“¥ Received: "/>
                                                        <Run Text="{Binding FormattedBytesReceived}" FontWeight="SemiBold"/>
                                                    </TextBlock>
                                                    <TextBlock FontSize="11" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,2,0,0">
                                                        <Run Text="Rate: "/>
                                                        <Run Text="{Binding FormattedReceiveRate}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Security Alerts Card -->
                <Border 
                    Grid.Row="1" Grid.Column="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="2"
                    CornerRadius="12"
                    Padding="28"
                    Margin="12,12,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock 
                                    Text="âš ï¸" 
                                    FontSize="28"
                                    Margin="0,0,12,0"/>
                                <TextBlock 
                                    Text="Security Alerts" 
                                    FontSize="22" 
                                    FontWeight="SemiBold"
                                    VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button 
                                Content="ðŸ—‘ï¸"
                                Command="{x:Bind ViewModel.ClearAlertsCommand}"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="18"
                                Padding="8"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                ToolTipService.ToolTip="Clear all alerts"/>
                        </Grid>

                        <!-- Alerts List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ListView ItemsSource="{x:Bind ViewModel.SecurityAlerts, Mode=OneWay}"
                                      SelectionMode="None"
                                      IsItemClickEnabled="False">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <Border Padding="12,8" 
                                                Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                                                CornerRadius="6"
                                                Margin="0,0,0,8">
                                            <TextBlock Text="{x:Bind}" 
                                                       TextWrapping="Wrap"
                                                       FontFamily="Consolas"
                                                       FontSize="12"
                                                       Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
