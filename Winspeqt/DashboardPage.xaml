<Page
    x:Class="Winspeqt.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Padding="40,40,40,20">
            <TextBlock 
                Text="Winspeqt" 
                FontSize="32" 
                FontWeight="Bold"
                Margin="0,0,0,8"/>
            <TextBlock 
                Text="Your Windows System Inspector and Optimizer" 
                FontSize="16" 
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Margin="0,0,0,4"/>
            <TextBlock 
                Text="Choose a category to get started" 
                FontSize="14" 
                Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
        </StackPanel>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1" Padding="40,20,40,40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Security Card -->
            <Button 
                Grid.Column="0"
                Margin="0,0,12,0"
                Padding="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                CornerRadius="8"
                Click="SecurityCard_Click">
                <Grid Padding="32">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Icon -->
                    <FontIcon 
                        Grid.Row="0"
                        Glyph="&#xE72E;" 
                        FontSize="48"
                        Foreground="#4CAF50"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20"/>

                    <!-- Content -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                        <TextBlock 
                            Text="Security" 
                            FontSize="24" 
                            FontWeight="SemiBold"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,12"/>
                        <TextBlock 
                            Text="Check your system's security status, find vulnerabilities, and get recommendations to protect your PC"
                            FontSize="14"
                            TextWrapping="Wrap"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            HorizontalAlignment="Center"
                            TextAlignment="Center"/>
                    </StackPanel>

                    <!-- Action Text -->
                    <TextBlock 
                        Grid.Row="2"
                        Text="Get Started →" 
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"/>
                </Grid>
            </Button>

            <!-- Optimization Card -->
            <Button 
                Grid.Column="1"
                Margin="12,0,12,0"
                Padding="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                CornerRadius="8"
                Click="OptimizationCard_Click">
                <Grid Padding="32">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Icon -->
                    <FontIcon 
                        Grid.Row="0"
                        Glyph="&#xE73C;" 
                        FontSize="48"
                        Foreground="#2196F3"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20"/>

                    <!-- Content -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                        <TextBlock 
                            Text="Optimization" 
                            FontSize="24" 
                            FontWeight="SemiBold"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,12"/>
                        <TextBlock 
                            Text="Free up disk space, find large files, remove unused apps, and speed up your system safely"
                            FontSize="14"
                            TextWrapping="Wrap"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            HorizontalAlignment="Center"
                            TextAlignment="Center"/>
                    </StackPanel>

                    <!-- Action Text -->
                    <TextBlock 
                        Grid.Row="2"
                        Text="Get Started →" 
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"/>
                </Grid>
            </Button>

            <!-- Monitoring Card -->
            <Button 
                Grid.Column="2"
                Margin="12,0,0,0"
                Padding="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                CornerRadius="8"
                Click="MonitoringCard_Click">
                <Grid Padding="32">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Icon -->
                    <FontIcon 
                        Grid.Row="0"
                        Glyph="&#xE9D9;" 
                        FontSize="48"
                        Foreground="#FF9800"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20"/>

                    <!-- Content -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                        <TextBlock 
                            Text="Monitoring" 
                            FontSize="24" 
                            FontWeight="SemiBold"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,12"/>
                        <TextBlock 
                            Text="Monitor CPU, memory, and disk usage in real-time with friendly explanations of what's happening"
                            FontSize="14"
                            TextWrapping="Wrap"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            HorizontalAlignment="Center"
                            TextAlignment="Center"/>
                    </StackPanel>

                    <!-- Action Text -->
                    <TextBlock 
                        Grid.Row="2"
                        Text="Get Started →" 
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"/>
                </Grid>
            </Button>
        </Grid>
    </Grid>
</Page>